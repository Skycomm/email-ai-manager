# Email AI Manager Configuration
# Copy this to .env and fill in your values

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# Anthropic API Key for Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Primary mailbox to monitor
MAILBOX_EMAIL=david@skycomm.com.au

# ===========================================
# MCP SERVER
# ===========================================

# URL of your MS365 MCP server
# Use host.docker.internal when running in Docker
MS365_MCP_URL=http://localhost:3000

# ===========================================
# TEAMS INTEGRATION
# ===========================================

# Teams channel ID for notifications (get from Teams app)
TEAMS_CHANNEL_ID=

# Alternative: use a 1:1 chat instead of channel
TEAMS_CHAT_ID=

# Send immediate notification for urgent emails
TEAMS_NOTIFY_URGENT=true

# Time to send daily digest (24-hour format)
TEAMS_DAILY_DIGEST_TIME=08:00

# ===========================================
# BEHAVIOR SETTINGS
# ===========================================

# How often to check for new emails (seconds)
POLL_INTERVAL_SECONDS=60

# Allow auto-sending low-risk emails (PHASE 4 - keep false)
AUTO_SEND_ENABLED=false

# Maximum outbound emails per hour (safety limit)
MAX_EMAILS_PER_HOUR=20

# Always require approval for external domains
EXTERNAL_DOMAIN_REQUIRE_APPROVAL=true

# ===========================================
# DATABASE
# ===========================================

# Path to SQLite database
DB_PATH=/data/email_manager.db

# Encrypt email bodies at rest
ENCRYPT_EMAIL_BODIES=true

# Encryption key (auto-generated if not set)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=

# ===========================================
# LOGGING
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional, logs to stdout if not set)
LOG_FILE=

# ===========================================
# AGENT SETTINGS
# ===========================================

# Claude model to use
AGENT_MODEL=claude-sonnet-4-20250514

# Maximum tokens for agent responses
MAX_TOKENS=4096

# ===========================================
# DASHBOARD (Phase 3)
# ===========================================

# Enable web dashboard
DASHBOARD_ENABLED=false

# Dashboard HTTP port
DASHBOARD_PORT=8080

# API key for dashboard authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
DASHBOARD_API_KEY=

# ===========================================
# SHARED MAILBOXES (Phase 4)
# ===========================================

# Additional shared mailboxes to monitor (comma-separated)
# SHARED_MAILBOX_EMAILS=support@skycomm.com.au,info@skycomm.com.au
